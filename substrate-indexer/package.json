{
  "name": "substrate-indexer",
  "version": "0.0.1",
  "description": "A Node JS application to extract event & extrinsic data from substrate chains and save to to MongoDB.",
  "main": "dist/index.js",
  "repository": "git@github.com:litentry/web3-indexer.git",
  "contributors": [
    "Ben Mason <ben@wattmason.co.uk>"
  ],
  "scripts": {
    "build": "rm -rf ./dist && tsc",
    "start": "yarn build && node dist/index.js",
    "delete-range": "yarn build && node dist/scripts/deleteBlockRange.ts",
    "validate": "yarn build && node dist/scripts/validateBlocks.ts",
    "dev:start": "nodemon src/index.ts",
    "dev:delete-range": "nodemon src/scripts/deleteBlockRange.ts",
    "dev:validate": "nodemon src/scripts/validateBlocks.ts"
  },
  "dependencies": {
    "@polkadot/api": "^6.6.1",
    "@polkadot/types": "^6.6.1",
    "@types/lodash": "^4.14.177",
    "dotenv": "^10.0.0",
    "lodash": "^4.17.21",
    "mongoose": "^6.0.5",
    "react": "^17.0.2",
    "typescript": "^4.3.5"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "4.22.1",
    "@typescript-eslint/parser": "4.22.1",
    "eslint": "7.26.0",
    "prettier": "^2.3.2",
    "ts-node": "^10.1.0",
    "tslint": "^6.1.3"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
