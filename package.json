{
  "private": true,
  "scripts": {
    "start": "cd api-gateway && yarn start",
    "build": "yarn workspaces run build",
    "postinstall": "yarn build",
    "start:dev": "nodemon --exec \"yarn build && yarn start\""
  },
  "workspaces": [
    "api-gateway",
    "subschemas/*"
  ],
  "resolutions": {
    "@polkadot/api": "^6.10.3",
    "@polkadot/api-contract": "^6.10.3",
    "@polkadot/rpc-provider": "^6.10.3",
    "@polkadot/types": "^6.10.3",
    "@polkadot/types-known": "^6.10.3",
    "@polkadot/types-support": "^6.10.3",
    "@polkadot/util": "^8.0.4",
    "@polkadot/util-crypto": "^8.0.4",
    "@polkadot/wasm-crypto": "^4.4.1"
  },
  "nodemonConfig": {
    "watch": [
      "./api-gateway/**/src/*",
      "./subschemas/**/src/*"
    ],
    "ext": "ts,js,json",
    "ignore": [
      "node_modules/*"
    ]
  }
}
